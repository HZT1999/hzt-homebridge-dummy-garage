{
  "pluginAlias": "DummyGarage",
  "pluginType": "accessory",
  "singular": false,
  "schema": {
    "title": "Dummy Garage",
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Dummy Garage",
        "description": "Name of Garage to appear in Home app"
      },
      "autoCloseDelay": {
        "title": "Auto Close Delay",
        "type": "integer",
        "default": 0,
        "description": "Number of seconds after opening door will automatically close. 0 to disable."
      },
      "url": {
        "title": "HTTP URL",
        "type": "string",
        "required": true,
        "default": "http://127.0.0.1:31337/",
        "description": "HTTP URL to open garage door"
      },
      "user": {
        "title": "Username",
        "type": "string",
        "required": true,
        "default": "user",
        "description": "HTTP access username"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "default": "",
        "description": "HTTP access password"
      }
    }
  }
}